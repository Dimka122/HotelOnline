@model HotelBooking.Application.DTOs.CreateBookingDto
@{
    var room = ViewBag.Room as HotelBooking.Application.DTOs.RoomDto;
    ViewData["Title"] = "Book Room";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Book Room</h2>

            @if (room != null)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Room @room.Number</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@room.HotelName</h6>
                        <p class="card-text">@room.Description</p>
                        <p class="card-text">
                            <strong>Capacity:</strong> @room.Capacity persons<br>
                            <strong>Price per night:</strong> <span class="text-primary h5">$@room.PricePerNight</span>
                        </p>
                    </div>
                </div>
            }

            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="RoomId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CheckInDate" class="form-label">Check-in Date</label>
                            <input asp-for="CheckInDate" type="date" class="form-control"
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")"
                                   onchange="calculateTotal()" required />
                            <span asp-validation-for="CheckInDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CheckOutDate" class="form-label">Check-out Date</label>
                            <input asp-for="CheckOutDate" type="date" class="form-control"
                                   min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")"
                                   onchange="calculateTotal()" required />
                            <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <h5>Booking Cost</h5>
                        <div id="priceDetails">
                            <p>Select dates to calculate total cost</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg">Book Now</button>
                    <a href="/Hotels" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const pricePerNight = @room?.PricePerNight ?? 0;

        function calculateTotal() {
            const checkIn = new Date(document.getElementById('CheckInDate').value);
            const checkOut = new Date(document.getElementById('CheckOutDate').value);

            if (checkIn && checkOut && checkOut > checkIn) {
                const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                const totalPrice = nights * pricePerNight;

                document.getElementById('priceDetails').innerHTML = `
                    <p><strong>Number of nights:</strong> ${nights}</p>
                    <p><strong>Price per night:</strong> $${pricePerNight}</p>
                    <h4 class="text-success"><strong>Total: $${totalPrice}</strong></h4>
                `;
            }
        }

        // Auto-calculate on page load if dates are already selected
        document.addEventListener('DOMContentLoaded', function() {
            calculateTotal();
        });
    </script>
}