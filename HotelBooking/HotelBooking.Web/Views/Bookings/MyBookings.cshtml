@model IEnumerable<HotelBooking.Application.DTOs.BookingDto>
@{
    ViewData["Title"] = "Мои бронирования";
}

<div class="container mt-4">
    <h2>Мои бронирования</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>У вас пока нет бронирований</h4>
            <p>Найдите подходящий отель и забронируйте номер!</p>
            <a href="/Hotels" class="btn btn-primary">Найти отель</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Бронирование #@booking.Id</h5>
                            <p class="card-text">
                                <strong>Отель:</strong> @booking.HotelName<br>
                                <strong>Номер:</strong> @booking.RoomNumber<br>
                                <strong>Заезд:</strong> @booking.CheckInDate.ToString("dd.MM.yyyy")<br>
                                <strong>Выезд:</strong> @booking.CheckOutDate.ToString("dd.MM.yyyy")<br>
                                <strong>Статус:</strong>
                                <span class="badge @(booking.Status == "Confirmed" ? "bg-success" : "bg-warning")">
                                    @booking.Status
                                </span>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="text-primary">@booking.TotalPrice</h5>
                                @if (booking.Status == "Confirmed")
                                {
                                    <form asp-action="Cancel" method="post">
                                        <input type="hidden" name="id" value="@booking.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('Вы уверены, что хотите отменить бронирование?')">
                                            Отменить
                                        </button>
                                    </form>
                                }
                            </div>
                            <small class="text-muted">Создано: @booking.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>