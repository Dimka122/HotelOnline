@model IEnumerable<HotelBooking.Application.DTOs.BookingDto>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-4">
    <h2>My Bookings</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>You don't have any bookings yet</h4>
            <p>Find a suitable hotel and book a room!</p>
            <a href="/Hotels" class="btn btn-primary">Find Hotel</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Booking #@booking.Id</h5>
                            <p class="card-text">
                                <strong>Hotel:</strong> @booking.HotelName<br>
                                <strong>Room:</strong> @booking.RoomNumber<br>
                                <strong>Check-in:</strong> @booking.CheckInDate.ToString("MM/dd/yyyy")<br>
                                <strong>Check-out:</strong> @booking.CheckOutDate.ToString("MM/dd/yyyy")<br>
                                <strong>Status:</strong>
                                <span class="badge @(booking.Status == "Confirmed" ? "bg-success" : "bg-warning")">
                                    @booking.Status
                                </span>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="text-primary">$@booking.TotalPrice</h5>
                                @if (booking.Status == "Confirmed")
                                {
                                    <form asp-action="Cancel" method="post">
                                        <input type="hidden" name="id" value="@booking.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to cancel this booking?')">
                                            Cancel
                                        </button>
                                    </form>
                                }
                            </div>
                            <small class="text-muted">Created: @booking.CreatedAt.ToString("MM/dd/yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>