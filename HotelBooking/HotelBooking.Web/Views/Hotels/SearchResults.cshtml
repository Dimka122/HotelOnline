@model IEnumerable<HotelBooking.Application.DTOs.RoomDto>
@{
    ViewData["Title"] = "Результаты поиска";
}

<div class="container mt-4">
    <h2>Результаты поиска</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>Нет доступных номеров</h4>
            <p>Попробуйте изменить параметры поиска.</p>
            <a href="/Hotels" class="btn btn-primary">Вернуться к поиску</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var room in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="@room.ImageUrl" class="card-img-top" alt="Room" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Номер @room.Number</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@room.HotelName</h6>
                            <p class="card-text flex-grow-1">@room.Description</p>
                            <p class="card-text">
                                <small class="text-muted">Вместимость: @room.Capacity человека</small>
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary">@room.PricePerNight.ToString("C")</span>
                                    <small class="text-muted">за ночь</small>
                                </div>
                                <a href="/Bookings/Create?roomId=@room.Id" class="btn btn-primary w-100 mt-2">Забронировать</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
