@model dynamic
@{
    ViewData["Title"] = "Бронирование отелей";
}

<div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-blue-600 text-white py-20">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl font-bold mb-4">Найдите идеальный отель</h1>
            <p class="text-xl mb-8">Лучшие предложения для вашего путешествия</p>

            <!-- Search Form -->
            <form asp-controller="Hotels" asp-action="Search" method="post" class="bg-white rounded-lg shadow-lg p-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">Город</label>
                        <input type="text" name="city" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-700" placeholder="Куда вы хотите поехать?" required>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">Заезд</label>
                        <input type="date" name="checkIn" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-700" required>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">Выезд</label>
                        <input type="date" name="checkOut" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-700" required>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">Гости</label>
                        <select name="guests" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-700">
                            <option value="1">1 гость</option>
                            <option value="2">2 гостя</option>
                            <option value="3">3 гостя</option>
                            <option value="4">4 гостя</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="mt-4 w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition duration-300">
                    Найти отели
                </button>
            </form>
        </div>
    </div>

    <!-- Featured Hotels -->
    <div class="container mx-auto px-4 py-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-8">Популярные отели</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Hotel cards will be populated here -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <img src="https://via.placeholder.com/400x250" alt="Hotel" class="w-full h-48 object-cover">
                <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Название отеля</h3>
                    <p class="text-gray-600 mb-4">Адрес отеля</p>
                    <div class="flex justify-between items-center">
                        <span class="text-2xl font-bold text-blue-600">$120</span>
                        <span class="text-gray-500">за ночь</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
}
